{
  "name": "justchill/laravel-captcha",
    "description": "Ultra-easy CAPTCHA integration for Laravel applications",
  "keywords": ["laravel", "captcha", "security", "validation", "spam-protection"],
  "homepage": "https://github.com/abramcatalyst/laravel-captcha",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "JustChill",
      "email": "help@justchill.ng"
    }
  ],
  "require": {
    "php": "^8.0",
    "laravel/framework": "^9.0|^10.0|^11.0|^12.0"
  },
  "suggest": {
    "ext-gd": "Required for image-based CAPTCHA generation"
  },
  "autoload": {
    "psr-4": {
      "JustChill\\LaravelCaptcha\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "JustChill\\LaravelCaptcha\\CaptchaServiceProvider"
      ],
      "aliases": {
        "Captcha": "JustChill\\LaravelCaptcha\\Facades\\Captcha"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
